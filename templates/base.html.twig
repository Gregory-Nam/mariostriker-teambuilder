<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
                Mario Striker Battle League - Team Builder!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		<link href="{{ asset('css/global.css') }}" rel="stylesheet"/>
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body data-target = "modal-handler.modal" {{ stimulus_controller('modal-handler', {'signupUrl':path('app_inscription'), 'loginUrl':path('app_connexion')}) }}>
        {{ include('modal/signup.html.twig') }}

		{% block nav %}

			<nav  class="navbar navbar-expand-sm " style="background-color:#1F0207">
				<div class="container-fluid ms-5 me-5">
					<div class="navbar-brand ">
						<img src="{{ asset("images/img.png")}}" width="80" height="60" class="d-inline-block" alt="">
						<a class="mario-title align-middle " href="#">
							TEAM BUILDER
						</a>
					</div>
					<div class="d-flex" >
						 {% if app.user.username is defined %}
							<button class="btn btn-outline-warning me-2"> Mon compte </button>
							<a href = "{{ path('app_logout') }}"> <button class="btn btn-outline-warning me-2"> Deconnexion </button></a>

						 {% else %}
						<button  data-action="click->modal-handler#loginForm"class="btn btn-outline-warning me-2" data-bs-toggle="modal" data-bs-target="#genericModal"> Connexion </button>
						<button  data-action="click->modal-handler#signUpForm" class="btn btn-outline-warning"  data-bs-toggle="modal" data-bs-target="#genericModal"> Inscription </button>
						{% endif %}

					</div>
				</div>
			</nav>
		{% endblock %}

        <div class="content d-flex">
		{% block body %}

        {% endblock %}
        </div>
	</body>
</html></body>
</html>
